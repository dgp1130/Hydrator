{
  "name": "hydroactive",
  "version": "0.1.4",
  "type": "module",
  "exports": {
    ".": "./src/index.js",
    "./serializers.js": "./src/serializers.js",
    "./signal-accessors.js": "./src/signal-accessors.js",
    "./signals.js": "./src/signals.js",
    "./testing.js": "./src/testing.js"
  },
  "sideEffects": false,
  "scripts": {
    "start": "npm run -s demo",
    "build": "rm -rf dist/lib/ && npm run -s build-lib",
    "build-lib": "tsc --project tsconfig.lib.json && npm run -s build-package",
    "build-package": "cp package.json README.md dist/lib/",
    "build-tests": "rm -rf dist/test/ && npm run -s build-tests-ts && npm run -s build-tests-html && npm run -s build-tests-package",
    "build-tests-ts": "tsc -p tsconfig.test.json",
    "build-tests-html": "(cd src/ && find . -name '*.test.html' -exec cp --parents '{}' ../dist/test/src/ \\;)",
    "build-tests-package": "cp package.json dist/test/",
    "demo": "rm -rf dist/demo/ && npm run -s build-demo && http-server dist/demo/src/demo/",
    "build-demo": "npm run build && rm -rf dist/demo/ && npm run -s build-demo-ts && npm run -s build-demo-html && npm run -s build-demo-link-hydroactive && npm run -s build-demo-link-node_modules",
    "build-demo-ts": "tsc --project tsconfig.demo.json",
    "build-demo-html": "mkdir -p dist/demo/src/demo/ && (cd src/demo/ && find . -name '*.html' -exec cp --parents '{}' ../../dist/demo/src/demo/ \\;)",
    "build-demo-link-hydroactive": "(cd dist/demo/src/demo/ && ln -s ../../../lib/src hydroactive)",
    "build-demo-link-node_modules": "(cd dist/demo/src/demo/ && ln -s ../../../../node_modules)",
    "test": "npm run -s build-tests && npm run -s wtr",
    "test-debug": "npm run -s build-tests && npm run -s wtr-debug",
    "wtr": "web-test-runner \"dist/test/**/*.test.html\" --puppeteer",
    "wtr-debug": "npm run -s wtr -- --manual",
    "clean": "rm -rf dist/"
  },
  "license": "MIT",
  "devDependencies": {
    "@11ty/is-land": "^4.0.0",
    "@types/jasmine": "^4.3.1",
    "@web/test-runner": "^0.15.3",
    "@web/test-runner-puppeteer": "^0.16.0",
    "http-server": "^14.1.1",
    "jasmine-core": "^4.5.0",
    "typescript": "^5.5.4"
  }
}
