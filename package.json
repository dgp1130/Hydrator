{
  "name": "hydroactive",
  "version": "0.0.2",
  "type": "module",
  "main": "index.js",
  "exports": {
    "./class": "./class.js",
    "./context": "./context.js"
  },
  "scripts": {
    "start": "npm run -s clean && npm run -s build && npm run -s serve",
    "build": "npm run -s build-ts && npm run -s build-html && npm run -s build-package",
    "build-ts": "tsc && ln -f -s ../node_modules dist/",
    "build-html": "cp src/examples/*.html dist/examples/ && cp src/examples/class/*.html dist/examples/class/",
    "build-package": "cp package.json README.md dist/",
    "serve": "node dist/examples/server.js",
    "test": "npm run -s build-ts",
    "clean": "rm -rf dist/"
  },
  "license": "MIT",
  "devDependencies": {
    "@11ty/is-land": "^3.0.0",
    "@types/express": "^4.17.13",
    "@types/node": "^18.6.4",
    "express": "^4.18.1",
    "typescript": "^4.9.4"
  },
  "files": [
    "/*.js",
    "/*.d.ts",
    "/*.js.map",
    "/*.d.ts.map"
  ]
}
