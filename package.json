{
  "name": "hydroactive",
  "version": "0.0.5",
  "type": "module",
  "exports": {
    ".": "./src/index.js",
    "./signals.js": "./src/signals.js"
  },
  "scripts": {
    "start": "npm run -s demo",
    "build": "npm run -s clean && npm run -s build-lib",
    "build-lib": "tsc --project tsconfig.lib.json && npm run -s build-package",
    "build-package": "cp package.json dist/",
    "build-tests": "npm run -s clean && npm run -s build-tests-ts && npm run -s build-tests-html",
    "build-tests-ts": "tsc -p tsconfig.test.json",
    "build-tests-html": "(cd src/ && find . -name '*.test.html' -exec cp --parents '{}' ../dist/ \\;)",
    "demo": "npm run -s clean && npm run -s build-demo && http-server dist/demo/",
    "build-demo": "npm run -s build-demo-ts && npm run -s build-demo-html && npm run -s build-demo-link-hydroactive",
    "build-demo-ts": "tsc --project tsconfig.demo.json",
    "build-demo-html": "mkdir -p dist/demo/ && (cd src/demo/ && find . -name '*.html' -exec cp --parents '{}' ../../dist/demo/ \\;)",
    "build-demo-link-hydroactive": "(cd dist/demo/ && ln -s ../ hydroactive)",
    "test": "npm run -s clean && npm run -s build-tests && npm run -s wtr",
    "test-debug": "npm run -s clean && npm run -s build-tests && npm run -s wtr-debug",
    "wtr": "web-test-runner \"dist/**/*.test.html\" --puppeteer",
    "wtr-debug": "npm run -s wtr -- --manual",
    "clean": "rm -rf dist/"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jasmine": "^4.3.1",
    "@web/test-runner": "^0.15.0",
    "@web/test-runner-puppeteer": "^0.14.0",
    "http-server": "^14.1.1",
    "jasmine-core": "^4.5.0",
    "typescript": "^4.9.4"
  },
  "files": [
    "/*.js",
    "/*.d.ts",
    "/*.js.map",
    "/*.d.ts.map"
  ]
}
